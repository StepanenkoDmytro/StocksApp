<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">


    <changeSet id="1.2.0" author="dmytro.stepanenko">
        <createTable tableName="accounts">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false" unique="false"/>
            </column>

            <column name="account_number" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="account_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="account_type" type="VARCHAR(25)" defaultValue="ACTIVE">
                <constraints nullable="false"/>
            </column>

            <column name="balance" type="DECIMAL(10,2)">
                <constraints nullable="true"/>
            </column>

            <column name="created" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>

            <column name="updated" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="VARCHAR(25)" defaultValue="ACTIVE">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

    <changeSet id="1.2.1" author="dmytro.stepanenko">
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="accounts"
                                 constraintName="fk_accounts_users"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>

    <changeSet id="1.2.2" author="dmytro.stepanenko">
        <createTable tableName="payments">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="account_id" type="BIGINT">
                <constraints nullable="false" unique="false"/>
            </column>

            <column name="beneficiary" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="beneficiary_acc_no" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="amount" type="DECIMAL(10,2)">
                <constraints nullable="true"/>
            </column>

            <column name="reference_no" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="status_payment" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="reason_code" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="created" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

    <changeSet id="1.2.3" author="dmytro.stepanenko">
        <addForeignKeyConstraint baseColumnNames="account_id"
                                 baseTableName="payments"
                                 constraintName="fk_payments_account_id"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="accounts"/>
    </changeSet>

    <changeSet id="1.2.4" author="dmytro.stepanenko">
        <createTable tableName="transacts">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="account_id" type="BIGINT">
                <constraints nullable="false" unique="false"/>
            </column>

            <column name="transaction_type" type="VARCHAR(50)">
                <constraints nullable="false" unique="false"/>
            </column>

            <column name="amount" type="DECIMAL(10,2)">
                <constraints nullable="true"/>
            </column>

            <column name="source" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="status_transact" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="reason_code" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="purchase_details" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="created" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="true"/>
            </column>

        </createTable>
    </changeSet>

    <changeSet id="1.2.5" author="dmytro.stepanenko">
        <addForeignKeyConstraint baseColumnNames="account_id"
                                 baseTableName="transacts"
                                 constraintName="fk_transacts_account_id"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="accounts"/>
    </changeSet>

    <changeSet id="1.2.6" author="dmytro.stepanenko">
        <createTable tableName="account_coins">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="account_id" type="BIGINT">
                <constraints nullable="false" unique="false"/>
            </column>

            <column name="id_coin" type="VARCHAR(255)">
                <constraints nullable="false" unique="false"/>
            </column>

            <column name="symbol" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="price" type="DECIMAL(10,2)">
                <constraints nullable="true"/>
            </column>

            <column name="amountCOIN" type="DECIMAL(20,10)">
                <constraints nullable="true"/>
            </column>

            <column name="amountUSD" type="DECIMAL(10,2)">
                <constraints nullable="true"/>
            </column>

            <column name="created" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP()">
                <constraints nullable="false"/>
            </column>

        </createTable>
    </changeSet>

    <changeSet id="1.2.7" author="dmytro.stepanenko">
        <addForeignKeyConstraint baseColumnNames="account_id"
                                 baseTableName="account_coins"
                                 constraintName="fk_account_coins_account_id"
                                 onDelete="CASCADE"
                                 onUpdate="RESTRICT"
                                 referencedColumnNames="id"
                                 referencedTableName="accounts"/>
    </changeSet>

</databaseChangeLog>